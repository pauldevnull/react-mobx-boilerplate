{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "rules": {
    "no-unused-variable": true,
    "import-name": false,
    "indent": [true, "spaces", 2],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-alignment": false,
    "variable-name": [false],
    "max-line-length": [true, 500],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ]
  }
}
